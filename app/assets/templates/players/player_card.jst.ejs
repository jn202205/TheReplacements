<div class="col-sm-4 col-xs-12">
  <div class="thumbnail">
    <img src="<%= player.get('img_url') || "/assets/default-user-image.gif"%>" width=150 height=150>
    <div class="caption">
      <h3><%= player.escape('fname') %></h3>
      <ul>
        <% _.each(player.sports().sample(3), function(sport) { %>
          <li><%= sport.get('name') %></li>
        <% }) %>
      </ul>
      <p>
      <a href="#profile" class="profile-btn btn btn-default" 
                  data-id="<%= player.id %>"
                  role="button">Profile</a>
      </p>
    </div>
  </div>
</div>
