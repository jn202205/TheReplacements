<%= form_for :session, url: session_path do |f| %>
  <% if flash[:error]  %>
    <div id="error_explanation">
      <ul>
        <li>
          <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= flash[:error] %>
          </div>
        </li>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :email %>
    <div>
      <%= f.text_field :email, class: "form-control", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <div>
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <div>
      <%= f.submit 'Login', class: "col-xs-12 btn btn-default" %>
    </div>
    <div>
      <%= f.submit 'Guest Login', class: "guest-login col-xs-12 btn btn-default" %>
    </div>
  </div>
  <div>
    <%= link_to 'New user? Sign Up.', new_user_path %>
  </div>
<% end %>
<script type="text/javascript" charset="utf-8">
$('.guest-login').click(function() {
  $("input[name='session[email]']").val('watson@example.org');
  $("input[name='session[password]']").val('password');
})
</script>
