<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li>
            <div class="alert alert-danger alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <%= message %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :fname, 'First name', class: 'control-label col-sm-2' %>
    <div class="col-sm-8">
      <%= f.text_field :fname, class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :lname, 'Last name', class: 'control-label col-sm-2' %>
    <div class="col-sm-8">
      <%= f.text_field :lname, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: 'control-label col-sm-2' %>
    <div class="col-sm-8">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :zipcode, class: 'control-label col-sm-2' %>
    <div class="col-sm-8">
      <%= f.text_field :zipcode, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: 'control-label col-sm-2' %>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Sign up', class: "btn btn-default" %>
    </div>
  </div>
<% end %>
