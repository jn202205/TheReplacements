        <%= render 'static_pages/sports_item', sport: 'Ultimate Frisbee', url: 'http://boykinsbasketball.com/wp-content/uploads/2015/02/basketball1.jpg' %>
        </a>
        <a href="#">
        <%= render 'static_pages/sports_item', sport: 'Soccer', url: 'http://boykinsbasketball.com/wp-content/uploads/2015/02/basketball1.jpg' %>
